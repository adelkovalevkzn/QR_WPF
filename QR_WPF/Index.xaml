<Page x:Class="QR_WPF.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QR_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Index">

    <Grid Background="#ffffffff">
        <GroupBox Header="GroupBox" BorderBrush="#00000000" Foreground="#00000000">
            <StackPanel Width="800">
                <Label FontSize="24" BorderBrush="#00000000">Генерация QR кода</Label>
                <Label FontSize="16" Margin="0,20,0,0">Вставьте ссылку для получения QR кода</Label>
                <TextBox Height="35" x:Name="UrlField" Margin="0,15,0,0" FontSize="16" VerticalContentAlignment="Center"></TextBox>
                <Button Click="GenerateQR" Width="200" HorizontalAlignment="Left" Height="40" Margin="0,10,0,0" FontSize="16">Сгенерировать</Button>
                <Image x:Name="QRImage"  Height="100" Width="100" Margin="0,50,0,0"/>
                <Button Click="ShowUsers" Width="200" Height="50" FontSize="16">Список пользователей</Button>
            </StackPanel>
        </GroupBox>

    </Grid>

</Page>
